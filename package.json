{
  "name": "@alleshq/reactants",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "license": "MIT",
  "version": "1.3.0",
  "files": [
    "dist",
    "scripts",
    "index.css",
    "LICENSE",
    "README"
  ],
  "scripts": {
    "build": "yarn clean && NODE_ENV=production PURGE_CSS=off yarn bundle && yarn declaration && cp dist/index.css index.css",
    "bundle": "rollup -c scripts/rollup.config.ts",
    "declaration": "tsc src/index.ts -d --emitDeclarationOnly --declarationDir dist --jsx react --esModuleInterop",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"**/*.+(js|ts|tsx)\""
  },
  "peerDependencies": {
    "es-cookie": "^1.3.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "swr": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@tailwindcss/ui": "^0.3.0",
    "@types/autoprefixer": "^9.7.2",
    "@types/classnames": "^2.2.10",
    "@types/node": "^14.0.1",
    "@types/react": "^16.9.35",
    "@types/react-transition-group": "^4.4.0",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "classnames": "^2.2.6",
    "cssnano": "^4.1.10",
    "prettier": "^2.0.5",
    "react-feather": "^2.0.8",
    "react-transition-group": "^4.4.1",
    "rollup": "^2.10.3",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^3.1.1",
    "tailwindcss": "^1.4.6",
    "tailwindcss-dark-mode": "https://github.com/ChanceArthur/tailwindcss-dark-mode",
    "tailwindcss-theming": "^3.0.0-beta.0",
    "ts-node": "^8.10.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0"
  }
}
